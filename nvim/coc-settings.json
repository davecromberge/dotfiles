{
  "languageserver": {
    "metals": {
      "command": "~/metals/metals-vim",
      "rootPatterns": ["build.sbt", "build.sc"],
      "filetypes": ["scala", "sbt", "sc"]
    },
    "haskell": {
      "command": "ghcide",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  },
  "yank.highlight.duration": 700
}
